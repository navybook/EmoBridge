<div class='w-5/6 mx-auto max-w-screen-xl'>
  <h1 class="text-center text-3xl font-bold mt-8">ログイン</h1>

  <div class="container mx-auto mt-8">
    <div class="flex justify-center">
      <div class="w-full max-w-md">
        <div class="p-4 shadow-lg rounded-lg bg-white">
          <%= form_with url: login_path, local: true do |f| %>
            <div class="mb-4">
              <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700" %>
              <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
            </div>
            <div class="mb-4">
              <%= f.label :password, "パスワード", class: "block text-sm font-medium text-gray-700" %>
              <%= f.password_field :password, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
            </div>
            <div class='mb-4 text-center'>
              <%= link_to 'パスワードを忘れた方へ', new_password_reset_path, class: "text-sm text-blue-500 hover:text-blue-700" %>
            </div>
            <div class="flex justify-center">
              <%= f.submit "ログイン", class: "px-4 py-2 rounded bg-blue-500 text-white hover:bg-blue-700" %>
            </div>
          <% end %>
          <div class="mt-4 flex justify-center">
            <%= link_to 'LINEでログイン', auth_at_provider_path(provider: :line), class: "px-4 py-2 rounded bg-green-400 text-black hover:bg-green-600" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
