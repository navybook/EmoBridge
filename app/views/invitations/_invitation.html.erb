<% if invitation.present? && invitation.status == 'pending' %>
  <div class="flex items-center justify-between mt-4">
    <p class="justify-start text-sm sm:text-base"><%= User.find(invitation.sender_id).name %>から招待されてます</p>
    <div class="justify-end">
      <%= link_to '承認', approve_invitation_path(invitation), data: { turbo_method: :patch }, class: "bg-blue-500 hover:bg-blue-700 text-white text-xs sm:text-base font-bold py-2 px-4 rounded" %>
      <%= link_to '拒否', invitation_path(invitation), data: { turbo_method: :delete, turbo_confirm: "本当に拒否しますか？" }, class: "bg-red-500 hover:bg-red-700 text-white text-xs sm:text-base font-bold py-2 px-4 rounded" %>
    </div>
  </div>
<% end %>
