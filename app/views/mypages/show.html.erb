<div class='w-5/6 mx-auto max-w-screen-xl'>
  <div class="container mx-auto mt-8">
    <div class="flex justify-center">
      <div class="w-full max-w-md">
        <div class="p-4 shadow-lg rounded-lg bg-white">
          <div class="flex items-center justify-between p-4">
          <%= image_tag(@user.avatar.present? ? @user.avatar.url : 'default.webp', alt: "Avatar", class: "w-10 h-10 rounded-full mr-4") %>
            <h2 class="mr-4"><%= @user.name %></h2>
            <div class="flex items-center justify-end">
              <%= link_to 'プロフィール編集', edit_mypage_path, class: "bg-blue-500 hover:bg-blue-700 text-white text-xs sm:text-base font-bold py-2 px-4 rounded" %>
            </div>
          </div>

          <div class="mt-8">
            <h3 class="text-sm sm:text-base font-bold mb-4">感情評価カテゴリー一覧</h3>
            <div>
              <%= render partial: "categories/category_item", collection: @user_categories, as: :category %>
            </div>
            <div class="mt-4">
              <div id="new-category-form">
                <%= form_with(model: Category.new, id: "category-form", local: true) do |f| %>
                  <div class="flex items-center justify-between mb-2" >
                    <%= f.text_field :name, class: "form-control text-xs sm:text-base mr-2", placeholder: "新規カテゴリー名" %>
                    <div class="justify-end">
                      <%= f.submit '作成', class: "bg-blue-500 hover:bg-blue-700 text-white text-xs sm:text-base font-bold py-2 px-2 rounded" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>

          <div class="mt-8">
            <h3 class="text-sm sm:text-base font-bold mb-4">伝えたいことのテンプレート一覧</h3>
            <div>
              <%= render partial: "message_templates/template", collection: @user_message_templates, as: :template %>
            </div>
            <div class="mt-4">
              <div id="new-message_template-form">
                <%= form_with(model: MessageTemplate.new, id: "message_template-form", local: true) do |f| %>
                  <div class="flex items-center justify-between mb-2" >
                    <%= f.text_field :message, class: "form-control text-xs sm:text-base mr-2", placeholder: "新規テンプレート" %>
                    <div class="justify-end">
                      <%= f.submit '作成', class: "bg-blue-500 hover:bg-blue-700 text-white text-xs sm:text-base font-bold py-2 px-2 rounded" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
