<div class='w-5/6 mx-auto max-w-screen-xl'>
  <h1 class="text-center text-3xl font-bold mt-8">新規登録</h1>

  <div class="container mx-auto mt-8">
    <div class="flex justify-center">
      <div class="w-full max-w-md">
        <div class="p-4 shadow-lg rounded-lg bg-white">
          <%= form_with model: @user, local: true do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <div class="mb-4">
              <%= f.label :name, "名前", class: "block text-gray-700 text-sm font-bold mb-2" %>
              <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300" %>
            </div>
            <div class="mb-4">
              <%= f.label :email, "メールアドレス", class: "block text-gray-700 text-sm font-bold mb-2" %>
              <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300" %>
            </div>
            <div class="mb-4">
              <%= f.label :password, "パスワード", class: "block text-gray-700 text-sm font-bold mb-2" %>
              <%= f.password_field :password, class: "mt-1 block w-full rounded-md border-gray-300" %>
            </div>
            <div class="mb-4">
              <%= f.label :password_confirmation, "パスワード確認", class: "block text-gray-700 text-sm font-bold mb-2" %>
              <%= f.password_field :password_confirmation, class: "mt-1 block w-full rounded-md border-gray-300" %>
            </div>
            <div class="mt-8 flex justify-center">
              <%= f.submit "サインアップ", class: "px-4 py-2 rounded bg-blue-500 text-white hover:bg-blue-700" %>
            </div>
          <% end %>
          <div class="mt-4 flex justify-center">
            <%= link_to 'Login with Line', auth_at_provider_path(provider: :line), class: "px-4 py-2 rounded bg-green-300 text-black hover:bg-green-600" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
